﻿@model IEnumerable<Prova.Models.Cliente>
@{
    ViewBag.Title = "Index";
}
@if (ViewBag.Mensagem != null)
{
    <div class="row">
        <div class="col-md-3">
            <div class="alert alert-warning">
                @ViewBag.Mensagem
            </div>
        </div>
    </div>
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cliente</title>
</head>
<body>
    <div>
        <table class="table">
            <tr>
                <th> @Html.DisplayNameFor(model => model.id)</th>
                <th> @Html.DisplayNameFor(model => model.nome)</th>
                <th> @Html.DisplayNameFor(model => model.telefone)</th>
                <th> @Html.DisplayNameFor(model => model.cep)</th>
                <th> @Html.DisplayNameFor(model => model.foto)</th>
                <th> @Html.DisplayNameFor(model => model.status)</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.telefone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cep)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.foto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.status)
                    </td>
                </tr>
            }
        </table>
</div>
    </body>
</html>

